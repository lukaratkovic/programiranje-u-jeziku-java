         <Label text="Select factory item:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
         <Button mnemonicParsing="false" onAction="#onSearchButtonClick" text="Search" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
            <GridPane.margin>
               <Insets />
            </GridPane.margin></Button>
         <TextField fx:id="nameTextField" GridPane.columnIndex="3" GridPane.rowIndex="1">
